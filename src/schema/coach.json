{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["scores"],
  "properties": {
    "overall": {
      "type": "number",
      "description": "Overall score (0-100)"
    },
    "score": {
      "type": "number",
      "description": "Alternative score field"
    },
    "scores": {
      "type": "object",
      "required": ["accuracy", "compliance", "discovery", "clarity", "objection_handling", "empathy"],
      "properties": {
        "accuracy": { "type": "number", "minimum": 0, "maximum": 5 },
        "compliance": { "type": "number", "minimum": 0, "maximum": 5 },
        "discovery": { "type": "number", "minimum": 0, "maximum": 5 },
        "clarity": { "type": "number", "minimum": 0, "maximum": 5 },
        "objection_handling": { "type": "number", "minimum": 0, "maximum": 5 },
        "empathy": { "type": "number", "minimum": 0, "maximum": 5 }
      }
    },
    "subscores": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },
    "worked": {
      "type": "array",
      "items": { "type": "string" }
    },
    "improve": {
      "type": "array",
      "items": { "type": "string" }
    },
    "phrasing": {
      "type": "string"
    },
    "feedback": {
      "type": "string"
    },
    "context": {
      "type": "object",
      "properties": {
        "rep_question": { "type": "string" },
        "hcp_reply": { "type": "string" }
      }
    },
    "ei": {
      "type": "object",
      "description": "Emotional Intelligence metrics",
      "required": ["overall", "scores", "insights", "recommendations"],
      "properties": {
        "overall": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Overall EI score (0-100)"
        },
        "scores": {
          "type": "object",
          "required": ["confidence", "active_listening", "rapport", "adaptability", "persistence"],
          "properties": {
            "confidence": { "type": "number", "minimum": 0, "maximum": 5 },
            "active_listening": { "type": "number", "minimum": 0, "maximum": 5 },
            "rapport": { "type": "number", "minimum": 0, "maximum": 5 },
            "adaptability": { "type": "number", "minimum": 0, "maximum": 5 },
            "persistence": { "type": "number", "minimum": 0, "maximum": 5 }
          }
        },
        "insights": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Observed EI strengths"
        },
        "recommendations": {
          "type": "array",
          "items": { "type": "string" },
          "description": "EI improvement suggestions"
        }
      }
    }
  }
}

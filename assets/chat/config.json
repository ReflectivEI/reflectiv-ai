{
  "version": "r10",
  "schema": "coach-v2",
  "defaultMode": "sales-simulation",

  "endpoints": {
    "product-knowledge": "/chat",
    "sales-simulation": "/chat",
    "role-play": "/chat",
    "emotional-assessment": "/chat"
  },

  "scoring": {
    "sales-simulation": {
      "dimensions": ["accuracy", "compliance", "clarity", "empathy"],
      "thresholds": { "pass": 0.75 }
    },
    "emotional-assessment": {
      "dimensions": ["empathy", "listening", "tone"],
      "thresholds": { "growth": 0.60 }
    }
  },

  "ui": {
    "labels": {
      "product-knowledge": "Product Knowledge",
      "sales-simulation": "Sales Simulation",
      "role-play": "Role Play",
      "emotional-assessment": "Emotional Assessment"
    }
  }
}
